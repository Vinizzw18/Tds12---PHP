                        <?php
                            $numero = $_POST['num1'];
                            if ($numero % 2== 0) {
                                echo "O número $numero é <b>Par</b>";
                            }
                            else if ($numero % 2== 1) {
                                echo "O número $numero é <b>Impar</b>";
                            }
                            else {
                                echo "</br>Numero Inválido!";
                            }
                        ?>
